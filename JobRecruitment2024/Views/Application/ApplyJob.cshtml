@model List<JobRecruitment2024.Models.Jobs>

@{
    ViewBag.Title = "Apply Job";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{
    if (TempData["SuccessMessage"] != null)
    {
        ViewBag.SuccessMessage = TempData["SuccessMessage"];
    }
    <div class="row">
        <div class="col-lg-">
            <div class="p-5">
                <div class="text-center">
                    <h4 class="h4 text-gray-900 mb-4">@ViewBag.Title</h4>
                </div>
                <div class="text-center">
                    <h5 class="h5 text-gray-900 mb-4">Available Jobs</h5>
                </div>
                @if (Model.Any())
                {
                    <div class="container mt-4">
                        <table class="table">
                            <thead class="thead-light">
                                <tr>
                                    <th>Job Name</th>
                                    <th>Job Description</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var job in Model)
                                {
                                    <tr>
                                        <td>@job.job_name</td>
                                        <td>@job.job_description</td>
                                        <td>
                                            <form method="post" action="@Url.Action("ApplyJob")">
                                                @using (Html.BeginForm("ApplyJob", "Application", FormMethod.Post, new { @class = "user" }))
                                                {
                                                    @Html.Hidden("job_id_apply", job.job_id) <!-- Pass the JobId -->
                                                    <input type="submit" class="btn btn-primary btn-user btn-block" value="Apply" />
                                                }
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p> No jobs available</p>
                }
                <div class="text-center">
                    @if (ViewBag.SuccessMessage != null)
                    {
                        <p style="color:green">@ViewBag.SuccessMessage</p>
                    }
                    <a href="@Url.Action("UserMainPage", "User")">User Main Page</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    if (ViewBag.StatusMessage != null)
    {
        <p style="color:green">@ViewBag.StatusMessage</p>
    }

    if (ViewBag.ErrorMessage != null)
    {

        <p style="color:red">@ViewBag.ErrorMessage</p>

        <script>
            setTimeout(function () {
                window.location.href = '@Url.Action("UserLoginPage", "User")';
            }, 3000);
        </script>
    }

}
