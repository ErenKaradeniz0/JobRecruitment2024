@model JobRecruitment2024.Models.Managers
@{
    ViewBag.Title = "Your Manager";
}


@if (Model != null)
{
    <div class="text-center">
        <h4 class="h4 text-gray-900 mb-4">@ViewBag.Title</h4>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>@Model.email</td>
            </tr>
            <tr>
                <th>Phone Number</th>
                <td>@Model.phone_num</td>
            </tr>
            <tr>
                <th>Name Surname</th>
                <td>@Model.name @Model.surname</td>
            </tr>
        </tbody>
    </table>
    <div class="text-center">
        <a href="@Url.Action("UserMainPage", "User")">User Main Page</a>
    </div>
}
else
{
    <p>@ViewBag.ErrorMessage</p>
    <script>
        setTimeout(function () {
            window.location.href = '@Url.Action("UserLoginPage","User")';
        }, 3000);
    </script>
}
