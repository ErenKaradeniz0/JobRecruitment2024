@{
    ViewBag.Title = "Manager Main Page";
    Layout = "~/Views/Shared/_LayoutWithImg.cshtml";
}

@if (ViewBag.ErrorMessage != null)
{
    <p style="color:red">@ViewBag.ErrorMessage</p>
    <script>
        setTimeout(function () {
            window.location.href = '@Url.Action("ManagerLoginPage")';
        }, 3000);
    </script>
}
else
{

    <div class="col-lg-6 d-none d-lg-block bg-manager-main-image"></div>
    <div class="col-lg-6">
        <div class="p-5">
            <div class="text-center">
                <h4 class="h4 text-gray-900 mb-4">Manager Main Page</h4>
            </div>
            <a href="ManagerUpdateAccount" class="btn btn-primary btn-user btn-block">Update Account Information</a>
            <a href="@Url.Action("ManageJobPosting", "Job")" class="btn btn-primary btn-user btn-block">Manage Job Posting</a>
            <a href="@Url.Action("ManageEmployees", "Employee")" class="btn btn-primary btn-user btn-block">Manage Employees</a>
            <a href="@Url.Action("ManageApplications", "Application")" class="btn btn-primary btn-user btn-block">Manage Received Applications</a>

            <div class="text-center">
                <a class="small" href="@Url.Action("Logout", "Manager")">Log Out</a>

            </div>
        </div>
    </div>

}
