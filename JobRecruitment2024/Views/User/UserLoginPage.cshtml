@{
    ViewBag.Title = "User Login";
    Layout = "~/Views/Shared/_LayoutWithImg.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    ViewBag.SuccessMessage = TempData["SuccessMessage"];
    <div class="alert alert-success" role="alert">
        @ViewBag.SuccessMessage
    </div>
}

<div class="col-lg-6 d-none d-lg-block bg-user-image"></div>
<div class="col-lg-6">
    <div class="p-5">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "user" }))
        {
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4 font-weight-bold">@ViewBag.Title</h1>
            </div>
            <div class="form-group">
                @Html.TextBox("email", null, new { @class = "form-control form-control-user", maxlength = "50", @placeholder = "Email", required = "required", type = "email", title = "Please enter email." })
            </div>
            <div class="form-group">
                @Html.Password("password", null, new { @class = "form-control form-control-user", maxlength = "10", @placeholder = "Password", required = "required" })
            </div>
            <button type="submit" class="btn btn-primary btn-user btn-block font-weight-bold">Login</button>
        }

        <hr>
        <div class="text-center">
            <a class="font-weight-bold" href="@Url.Action("Register", "User")">Create an Account!</a>
        </div>
        <div class="text-center">
            <a class="small font-weight-bold" href="@Url.Action("Forgot_Password", "Home")">Forgot Password?</a>
        </div>
        <div class="text-center">
            <a class="small font-weight-bold" href="@Url.Action("Index", "Home")">Go Main Page</a>
        </div>
        @Html.Partial("_ErrorMessage")
    </div>
</div>
